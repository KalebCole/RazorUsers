@page
@model IndexModel
@{
    ViewData["Title"] = "Mail Order Stuff - Home Page";
}

<div class="row mb-4">
    <form method="get">
        <div class="form-group">
            <label for="Filter">Search</label>
            <input type="text" class="form-control" id="search" placeholder="Search" name="Filter">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<div class="row">
    @foreach (var item in Model.Items)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h6>@item.Name</h6>
                        </div>
                        <div class="col-4 text-end">
                            <p>$ @item.Price</p>
                        </div>
                    </div>
                </div>
                
                <div class="card-body">
                    @if (string.IsNullOrEmpty(@item.ImageURL))
                    {
                        <img src="~/assets/PlaceHolder.png" class="card-img" style="width=100%; height=auto"/>
                    }
                    else
                    {
                        <img src="~/@item.ImageURL" class="card-img" style="width=100%; height=auto" />
                    }
                </div>
                <div class="card-body">
                    <p>@item.Description</p>
                </div>
                <div class="card-body">
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
