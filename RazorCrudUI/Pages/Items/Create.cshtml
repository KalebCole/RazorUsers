@page
@model UI.Pages.Items.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ItemModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!--attribute specifies how the form data should be encoded and sent to the server. In this case, it is set to "multipart/form-data", which is used when the form includes file uploads. -->
        <form method="post" enctype="multipart/form-data">
             <!-- Display for validation of items (like if there are 3 exact records)-->
             <!-- Displays in ModelOnly mode, so it does customized data validation-->
            <!-- <div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
            <!--<div asp-validation-summary="All" class="text-danger"></div>-->
            <div class="form-group">
                <!-- For if you do not enter the correct type-->
                <label asp-for="ItemModel.Name" class="control-label"></label>
                <input asp-for="ItemModel.Name" class="form-control" />
                <span asp-validation-for="ItemModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemModel.Description" class="control-label"></label>
                <input asp-for="ItemModel.Description" class="form-control" />
                <span asp-validation-for="ItemModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemModel.Price" class="control-label"></label>
                <input asp-for="ItemModel.Price" class="form-control" />
                <span asp-validation-for="ItemModel.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemModel.ImageURL" class="control-label"></label>
                <input type="file" asp-for="ItemModel.ImageURL" class="form-control" />
                <span asp-validation-for="ItemModel.ImageURL" class="text-danger"></span>
            </div

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

  @section Scripts {
      @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  }