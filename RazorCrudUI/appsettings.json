{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    // connection string tells the database how we will connect
    // we can specify the database and different options for the connection
    // examples: connection pooling, logging, etc.

    // To find this:
    // 1. Open SQL Server Object Explorer
    // 2. Right-click on the database
    // 3. Click on Properties
    // 4. Copy the Connection String    
    // 5. Use double quotes to make it all one line
    // initial catalog = name of the database
    "ConnectionStrings": {
        "Default": "Data Source=(localdb)\\ProjectModels;Initial Catalog=RazorArchitecture;Integrated Security=True;Connect Timeout=30;Encrypt=False;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False"
    },
    "AllowedHosts": "*"
}
